{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "defaultcontext" : "",
            "apache2modules" : [
                "proxy",
                "proxy_http",
                "ssl"
            ],
            "appconfigitems" : [
                {
                    "type"         : "file",
                    "name"         : "${appconfig.apache2.appconfigfragmentfile}",
                    "template"     : "tmpl/htaccess.tmpl",
                    "templatelang" : "varsubst"
                }
            ]
        }
    },
    "customizationpoints" : {
        "target" : {
            "name" : "Proxy URL",
            "type" : "string",
            "required" : true,
            "regex"    : "https?://.+"
        }
    }
}
